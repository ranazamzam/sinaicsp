<script type="text/javascript">
        jQuery(document).ready(function () {
            jQuery('#g_definitions').css('display', 'block');
        });
</script>
<div class="widgetbox" style="min-height:610px">
    <h4 class="widgettitle">Cities</h4>


    <div class="widgetcontent">
        <a class="btn btn-primary" href="@Url.Action("AddNewCity")">Add New City</a>
        @(Html.Kendo().Grid<Sinaicsp_API.City>()
      .Name("grid")
      .HtmlAttributes(new { style = "height:500px" })
      .Columns(columns =>
      {
      columns.Template(e => { }).ClientTemplate("<a href='City/AddNewCity/#= Id #'>Edit</a>&nbsp;&nbsp; <a onclick= \"return confirm('are you sure you want to delete that item?')\" href='City/Delete/#= Id #'>Delete</a>").Width(85);
            columns.Bound(c => c.Name);

        })
      .Groupable()
      .ColumnMenu()
      .Sortable(sortable =>
      {
            sortable.SortMode(GridSortMode.SingleColumn);
        })
      .Pageable(pageable => pageable
            .Refresh(true)
            .PageSizes(true)
            .ButtonCount(5))
      .Filterable()
      .Scrollable()
      .DataSource(dataSource => dataSource
          .Ajax()
          .PageSize(20)
          .Read(read => read.Action("Cities_Read", "City"))
      )
        )

    </div>
</div>
